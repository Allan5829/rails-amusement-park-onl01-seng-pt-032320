<%= @attraction.name %> <br/> 
Tickets: <%= @attraction.tickets %> <br/>
<%= @attraction.min_height %> <br/>

<%= form_tag ride_path do %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :attraction_id, @attraction.id %>
    <%= submit_tag 'Go on this ride' %>
  <% end %>

<% if @user.admin = true %>
  <%= link_to "Edit Attraction", edit_attraction_path %> <br>
<% end %> 